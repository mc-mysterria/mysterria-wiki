---
import LanguageSelector from './LanguageSelector.astro';

export interface Props {
    currentLanguage?: string;
    isAuthenticated?: boolean;
    username?: string;
    balance?: number;
    showBalance?: boolean;
}

const {
    currentLanguage = 'uk',
} = Astro.props;

const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en/') || currentPath === '/en';
const lang = currentLanguage || (isEnglish ? 'en' : 'uk');

const t = {
    uk: {
        home: 'Головна',
        guide: 'Гайди',
        rules: 'Правила',
        shop: 'Магазин',
        wiki: 'Вікі',
        search: 'Пошук...'
    },
    en: {
        home: 'Home',
        guide: 'Guide',
        rules: 'Rules',
        shop: 'Shop',
        wiki: 'Wiki',
        search: 'Search...'
    }
};

const translations = t[lang as keyof typeof t] || t.uk;

// Since this is a docs site, Wiki should always be active
// Other links should redirect to the main SPA site
const navigationLinks = [
    {
        path: `https://mysterria.net${lang === 'en' ? '/en' : ''}`,
        title: translations.home,
        external: true,
        active: false
    },
    {
        path: `https://mysterria.net${lang === 'en' ? '/en' : ''}/guides`,
        title: translations.guide,
        external: true,
        active: false
    },
    {
        path: `https://mysterria.net${lang === 'en' ? '/en' : ''}/rules`,
        title: translations.rules,
        external: true,
        active: false
    },
    {
        path: 'https://mysterria.net/store',
        title: translations.shop,
        external: true,
        active: false
    },
    {
        path: '#', // Placeholder since we're in the docs
        title: translations.wiki,
        external: false,
        active: true // Always active since we're in the docs site
    },
];
---

<header class="main-header" data-main-header>
    <div class="header-content">
        <!-- Logo -->
        <a href="/" class="header-logo-link">
            <svg class="logo-icon" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"/>
                <path d="M12 4.5L4.5 8.25v8.5c0 4.28 2.97 7.44 7.5 8.75 4.53-1.31 7.5-4.47 7.5-8.75v-8.5L12 4.5z"
                      fill="var(--myst-bg)"/>
            </svg>
            <span class="logo-text">Mysterria</span>
        </a>

        <!-- Main Navigation -->
        <nav class="navigation">
            {navigationLinks.map(link => (
                    <a
                            href={link.path}
                            class={`nav-link ${link.active ? 'active' : ''}`}
                            data-path={link.path}
                    >
                        {link.title}
                    </a>
            ))}
        </nav>

        <!-- Header Actions -->
        <div class="header-actions">
            <!-- Search Button -->
            <button
                    class="search-button"
                    aria-label={translations.search}
                    data-open-modal
                    data-search-modal
            >
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                </svg>
                <span class="search-text hide-mobile">{translations.search}</span>
                <kbd class="search-shortcut hide-mobile">⌘K</kbd>
            </button>

            <!-- Language Selector -->
            <LanguageSelector currentLanguage={lang}/>

            <!-- Theme Toggle Placeholder (Starlight will inject its theme selector here) -->
            <div class="theme-toggle-wrapper">
                <!-- Fallback theme selector in case Starlight's doesn't load -->
                <div class="fallback-theme-selector" style="display: none;">
                    <select class="theme-select" aria-label="Select theme">
                        <option value="auto">Auto</option>
                        <option value="dark">Dark</option>
                        <option value="light">Light</option>
                    </select>
                </div>
            </div>

            <!-- Mobile Navigation Toggle -->
            <button
                    class="mobile-nav-toggle"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    data-mobile-toggle
            >
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Navigation Overlay -->
    <div class="mobile-nav-overlay" data-mobile-overlay style="display: none;">
        <div class="mobile-nav-backdrop" data-mobile-backdrop></div>
        <nav class="mobile-nav">
            <div class="mobile-nav-header">
                <button class="mobile-nav-close" data-mobile-close aria-label="Close navigation">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="mobile-nav-content">
                {navigationLinks.map(link => (
                        <a
                                href={link.path}
                                class={`mobile-nav-link ${link.active ? 'active' : ''}`}
                                data-mobile-link
                        >
                            {link.title}
                        </a>
                ))}

                <div class="mobile-nav-actions">
                    <!-- Mobile Search -->
                    <button
                            class="mobile-search-button"
                            aria-label={translations.search}
                            data-open-modal
                            data-search-modal
                    >
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                             stroke-width="2">
                            <circle cx="11" cy="11" r="8"></circle>
                            <path d="m21 21-4.35-4.35"></path>
                        </svg>
                        <span>{translations.search}</span>
                    </button>

                    <div class="mobile-language-selector">
                        <LanguageSelector currentLanguage={lang}/>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</header>

